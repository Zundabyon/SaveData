<% content_for :title, "ログイン - Savedata" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 px-4">
  <div class="w-full max-w-md">

    <!-- ロゴ / 世界観 -->
    <div class="text-center mb-10">
      <h1 class="text-5xl font-bold text-white mb-4 font-pixel">
        Savedata
      </h1>
      <p class="text-sm text-blue-100 leading-relaxed">
        子どもの頃に夢中で遊んだゲーム<br>
        学生時代に友人と語り合ったタイトル<br>
        大人になってから時間を作って遊んだ作品――<br>
        <br>
        そんな思い出の詰まった<br>
        ゲームx人生のセーブデータを<br>
        大切に保管しておける場所。<br>
      </p>
    </div>

    <!-- メモリーカード風 UI -->
  <div class="relative bg-gray-300 border border-gray-400 rounded-xl shadow-md px-8 py-10">

  <!-- ヘッダー -->
  <div class="text-center mb-8">
    <h2 class="text-2xl font-pixel text-gray-800 mb-2">
      LOGIN
    </h2>
    <p class="text-xs text-gray-600">
      セーブデータ管理スロット
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>

    <!-- Email -->
    <div class="mb-5">
      <%= f.label :email, "メールアドレス", class: "block text-xs font-semibold text-gray-700 mb-2" %>
      <%= f.email_field :email,
        class: "w-full px-4 py-3 bg-gray-100 border border-gray-400 rounded-md focus:ring-2 focus:ring-blue-500 outline-none" %>
    </div>

    <!-- Password -->
    <div class="mb-6">
      <%= f.label :password, "パスワード", class: "block text-xs font-semibold text-gray-700 mb-2" %>
      <%= f.password_field :password,
        class: "w-full px-4 py-3 bg-gray-100 border border-gray-400 rounded-md focus:ring-2 focus:ring-blue-500 outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-6 text-xs text-gray-700">
        <label class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          記憶しておく
        </label>
      </div>
    <% end %>

    <!-- START -->
    <%= f.submit "START",
      class: "w-full py-3 bg-blue-600 hover:bg-black text-white font-pixel rounded-md transition" %>

  <% end %>

  <!-- Links -->
  <div class="mt-6 text-center text-xs space-y-2">
    <% if devise_mapping.registerable? %>
      <%= link_to "セーブデータを登録する", new_registration_path(resource_name),
        class: "block text-blue-700 hover:underline" %>
    <% end %>

    <% if devise_mapping.recoverable? %>
      <%= link_to "パスワードをお忘れの方", new_password_path(resource_name),
        class: "block text-gray-600 hover:underline" %>
    <% end %>
  </div>

</div>

  </div>
</div>
