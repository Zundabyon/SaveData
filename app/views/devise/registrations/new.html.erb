<% content_for :title, "サインアップ - Savedata" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 px-4">
  <div class="w-full max-w-md">

    <!-- ロゴ -->
    <div class="text-center mb-10">
      <h1 class="text-4xl font-pixel text-white mb-2">
        Savedata
      </h1>

    </div>

    <!-- メモリーカード風 -->
    <div class="bg-gray-300 border border-gray-400 rounded-xl shadow-md px-8 py-10">

      <!-- ヘッダー -->
      <div class="text-center mb-8">
        <h2 class="text-2xl font-pixel text-gray-800 mb-2">
          CHARACTER CREATE
        </h2>
        <p class="text-xs text-gray-600">
          新しいセーブデータを作成
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- 名前 -->
        <div class="mb-4">
          <%= f.label :name, "プレイヤー名", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.text_field :name,
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- 誕生日 -->
        <div class="mb-4">
          <%= f.label :birthday, "誕生日", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.date_field :birthday,
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- 性別 -->
        <div class="mb-5">
          <%= f.label :gender, "性別", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.select :gender,
            [["男性", true], ["女性", false]],
            { include_blank: "選択してください" },
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- パスワード -->
        <div class="mb-4">
          <%= f.label :password, "パスワード", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.password_field :password,
            autocomplete: "new-password",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- パスワード確認 -->
        <div class="mb-6">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- ボタン -->
        <%= f.submit "CREATE SAVE DATA",
          class: "w-full py-3 bg-blue-600 hover:bg-blue-700 text-white font-pixel rounded-md transition" %>

      <% end %>

      <!-- 戻る -->
      <div class="mt-6 text-center text-xs">
        <%= link_to "ログイン画面に戻る", new_session_path(resource_name),
          class: "text-blue-700 hover:underline" %>
      </div>

    </div>
  </div>
</div>
