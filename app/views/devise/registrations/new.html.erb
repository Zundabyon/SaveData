<% content_for :title, "サインアップ - Savedata" %>

<div class="min-h-screen flex">

<div class="w-full lg:w-1/2 flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 px-4">
  <div class="text-center text-white w-full max-w-md">

    <h1 class="text-5xl font-pixel mb-6">
      CHARACTER CREATE
    </h1>

    <!-- ステータスウィンドウ -->
    <div class="bg-blue-900/60 border border-blue-300 rounded-lg p-6 font-pixel text-xs shadow-lg mb-6">

      <p class="mb-4 text-center text-blue-200">
        PLAYER STATUS
      </p>

      <div class="space-y-2 text-blue-100">
        <div class="flex justify-between">
          <span>NAME</span>
          <span>NEW PLAYER</span>
        </div>
        <div class="flex justify-between">
          <span>LEVEL</span>
          <span>01</span>
        </div>
        <div class="flex justify-between">
          <span>PLAY TIME</span>
          <span>00:00</span>
        </div>
        <div class="flex justify-between">
          <span>DATA SLOT</span>
          <span>EMPTY</span>
        </div>
        <div class="flex justify-between">
          <span>MODE</span>
          <span>STORY</span>
        </div>
      </div>
    </div>

    <p class="mt-6 text-xs text-blue-200">
      新しいキャラクターを作成し、<br>
      あなたの冒険を振り返ろう。
    </p>

  </div>
</div>



<!-- 右側：フォーム -->
<div class="w-full lg:w-1/2 flex items-center justify-center bg-gray-300 px-4 py-12">
  <div class="w-full max-w-md">

    <!-- ヘッダー -->
    <div class="text-center mb-8">
      <p class="text-xs text-gray-600">
        新しいセーブデータを作成
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 名前 -->
      <div class="mb-4">
        <%= f.label :name, "プレイヤー名", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :name,
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- Email -->
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- 誕生日 -->
      <div class="mb-4">
        <%= f.label :birthday, "誕生日", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.date_field :birthday,
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- 性別 -->
      <div class="mb-5">
        <%= f.label :gender, "性別", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.select :gender,
          [["男性", true], ["女性", false]],
          { include_blank: "選択してください" },
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- 職業 -->
      <div class="mb-5">
        <%= f.label :job, "職業", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.select :job,
          [["せんし", "warrior"], ["まほうつかい", "mage"], ["とうぞく", "thief"], ["そうりょ", "priest"], ["ゆうしゃ", "fighter"], ["しにがみ", "devil"], ["Figma職人", "Figma_master"], ["その他", "other"]],
          { include_blank: "選択してください" },
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- パスワード -->
      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- パスワード確認 -->
      <div class="mb-6">
        <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <%= f.submit "CREATE SAVE DATA",
        class: "w-full py-3 bg-blue-600 hover:bg-blue-700 text-white font-pixel rounded-md transition" %>
    <% end %>

    <div class="mt-6 text-center text-xs">
      <%= link_to "ログイン画面に戻る", new_session_path(resource_name),
        class: "text-blue-700 hover:underline" %>
    </div>

  </div>
</div>
