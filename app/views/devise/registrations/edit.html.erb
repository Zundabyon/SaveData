<% content_for :title, "設定変更 - Savedata" %>
<%= edit_user_registration_path %>
 <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 px-4">
  <div class="w-full max-w-md">

    <!-- タイトル -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-pixel text-white mb-1">
        Savedata
      </h1>
      <p class="text-xs text-blue-100">
        SAVE DATA SETTINGS
      </p>
    </div>

    <!-- メモリーカード -->
  <div class="bg-gray-300 border border-gray-400 rounded-xl shadow-md px-8 py-10">

      <!-- ヘッダー -->
      <div class="text-center mb-8">
        <h2 class="text-xl font-pixel text-gray-800 mb-2">
          EDIT DATA
        </h2>
        <p class="text-xs text-gray-600">
          セーブデータを更新
        </p>
      </div>

    <%= form_for(resource,
            as: resource_name,
            url: registration_path(resource_name),
            html: { method: :put }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>
      <!-- 名前 -->
      <div class="mb-4">
        <%= f.label :name, "プレイヤー名", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :name,
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- 誕生日 -->
      <div class="mb-4">
        <%= f.label :birthday, "誕生日", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.date_field :birthday,
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- 性別 -->
      <div class="mb-5">
        <%= f.label :gender, "性別", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.select :gender,
          [["男性", true], ["女性", false]],
          { include_blank: "選択してください" },
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>

      <!-- 職業 -->
      <div class="mb-5">
        <%= f.label :job, "職業", class: "block text-xs font-semibold text-gray-700 mb-1" %>
        <%= f.select :job,
          [["せんし", "warrior"], ["まほうつかい", "mage"], ["とうぞく", "thief"], ["そうりょ", "priest"], ["ゆうしゃ", "fighter"], ["しにがみ", "devil"], ["Figma職人", "Figma_master"], ["その他", "other"]],
          { include_blank: "選択してください" },
          class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
      </div>
      <div class="flex flex-col gap-3">
       <div class="text-center font-pixel">
         <%= f.submit "UPDATE", class: "px-6 py-2 bg-gray-700 text-white rounded hover:bg-gray-800 transition" %>
         <%= link_to "CANCEL", dashboard_path, class: "px-6 py-3 bg-red-700 text-white rounded hover:bg-red-800 transition" %>
       </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
