<% content_for :title, "ゲーム記録 - Savedata" %>

<div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
  <div class="relative w-full max-w-md bg-[#d6d6d6] border border-gray-400 rounded-xl shadow-xl p-6">

    <!-- タイトル -->
    <div class="text-center mb-6">
      <h1 class="font-pixel text-lg text-gray-800">SAVE DATA</h1>
      <p class="text-xs text-gray-600 mt-1">ゲームの記憶を刻む</p>
    </div>

    <%= form_with model: @game, local: true do |f| %>

      <!-- タイトル -->
      <div class="mb-4">
        <%= f.label :title, "ゲームタイトル", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_field :title,
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>

      <!-- ハード -->
      <div class="mb-4">
        <%= f.label :hardware, "ハード", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_field :hardware,
              placeholder: "PS / SFC / PC など",
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- ジャンル -->
      <div class="mb-4">
        <%= f.label :genre, "ジャンル", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_field :genre,
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- クリア年 -->
      <div class="mb-4">
        <%= f.label :ended_year, "プレイした年", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.number_field :ended_year,
              placeholder: "2003",
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- メモ -->
      <div class="mb-6">
        <%= f.label :memo, "ひとことメモ", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_area :memo,
              rows: 3,
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- 保存ボタン -->
      <div class="text-center">
        <%= f.submit "SAVE",
              class: "font-pixel px-6 py-2 bg-gray-700 text-white rounded hover:bg-gray-800 transition" %>
      </div>

    <% end %>
  </div>
</div>
