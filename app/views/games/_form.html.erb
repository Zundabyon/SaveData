<%= form_with(model: game, local: true) do |f| %>
  <div class="space-y-4">

    <div>
      <%= f.label :title, "ゲーム名" %>
      <%= f.text_field :title, class: "w-full rounded px-3 py-2" %>
    </div>

    <div class="flex gap-4">
      <div class="flex-1">
        <%= f.label :started_year, "遊んだ年" %>
        <%= f.number_field :started_year, class: "w-full rounded px-3 py-2" %>
      </div>

      <div class="flex-1">
        <%= f.label :age, "年齢" %>
        <%= f.number_field :age, class: "w-full rounded px-3 py-2" %>
      </div>
    </div>

    <div>
      <%= f.label :platform, "ハード" %>
      <%= f.text_field :platform, class: "w-full rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :memo, "思い出" %>
      <%= f.text_area :memo, rows: 3, class: "w-full rounded px-3 py-2" %>
    </div>

    <div class="pt-4">
      <%= f.submit "記憶を保存",
        class: "w-full bg-gray-700 text-white py-2 rounded hover:bg-gray-800" %>
    </div>

  </div>
<% end %>
