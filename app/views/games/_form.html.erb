<%= form_with model: @game do |f| %>
  <%= f.text_field :title %>
  <%= f.submit "SAVE" %>
      <!-- タイトル -->
      <div class="mb-4">
        <%= f.label :title, "ゲームタイトル", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_field :title,
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>

      <!-- ハード -->
      <div class="mb-4">
        <%= f.label :hardware, "ハード", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_field :hardware,
              placeholder: "PS / SFC / PC など",
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- ジャンル -->
      <div class="mb-4">
        <%= f.label :genre, "ジャンル", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_field :genre,
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- プレイした年 -->
      <div class="mb-4">
        <%= f.label :played_age, "何歳くらいにプレイした？", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.number_field :played_age ,
              placeholder: "例: 15",
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>
<div class="mb-5">
  <p class="text-xs text-gray-700 mb-1">ゲームの楽しさ</p>
  <div class="flex flex-row-reverse justify-center gap-1">
    <% 5.downto(1) do |i| %>
      <%= f.radio_button :fun, i, id: "fun_#{i}", class: "hidden peer" %>
      <label for="fun_<%= i %>"
        class="cursor-pointer text-gray-400 peer-checked:text-yellow-500 text-xl">
        ★
      </label>
    <% end %>
  </div>
</div>
<div class="mb-6">
  <p class="text-xs text-gray-700 mb-1">ゲームの難しさ</p>
  <div class="flex flex-row-reverse justify-center gap-1">
    <% 5.downto(1) do |i| %>
      <%= f.radio_button :difficulty, i, id: "difficulty_#{i}", class: "hidden peer" %>
      <label for="difficulty_<%= i %>"
        class="cursor-pointer text-gray-400 peer-checked:text-gray-800 text-xl">
        ★
      </label>
    <% end %>
  </div>
</div>

      <!-- メモ -->
      <div class="mb-6">
        <%= f.label :memo, "ひとことメモ", class: "block text-xs text-gray-700 mb-1" %>
        <%= f.text_area :memo,
              rows: 3,
              class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded text-sm" %>
      </div>

      <!-- 保存ボタン -->
      <div class="flex flex-col gap-3">
       <div class="text-center">
         <%= f.submit " SAVE ",
               class: "font-pixel px-6 py-2 bg-gray-700 text-white rounded hover:bg-gray-800 transition" %>

         <%= link_to "CANCEL", dashboard_path,
               class: "font-pixel px-6 py-3 bg-red-700 text-white rounded hover:bg-red-800 transition" %>
       </div>
      </div>
    <% end %>
  </div>
</div>
