<% content_for :title, "設定変更 - Savedata" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 px-4">
  <div class="w-full max-w-md">

    <!-- タイトル -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-pixel text-white mb-1">
        Savedata
      </h1>
      <p class="text-xs text-blue-100">
        SAVE DATA SETTINGS
      </p>
    </div>

    <!-- メモリーカード -->
    <div class="bg-gray-300 border border-gray-400 rounded-xl shadow-md px-8 py-10">

      <!-- ヘッダー -->
      <div class="text-center mb-8">
        <h2 class="text-xl font-pixel text-gray-800 mb-2">
          EDIT DATA
        </h2>
        <p class="text-xs text-gray-600">
          セーブデータを更新
        </p>
      </div>

      <%= form_for(resource,
            as: resource_name,
            url: registration_path(resource_name),
            html: { method: :put }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email -->
        <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="mb-4 text-xs text-red-700">
            確認待ちのメール: <%= resource.unconfirmed_email %>
          </p>
        <% end %>

        <!-- New password -->
        <div class="mb-4">
          <%= f.label :password, "新しいパスワード（変更時のみ）",
            class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.password_field :password,
            autocomplete: "new-password",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-[10px] text-gray-600">
              <%= @minimum_password_length %>文字以上
            </p>
          <% end %>
        </div>

        <!-- Password confirmation -->
        <div class="mb-4">
          <%= f.label :password_confirmation, "新しいパスワード（確認）",
            class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- Current password -->
        <div class="mb-6">
          <%= f.label :current_password, "現在のパスワード（必須）",
            class: "block text-xs font-semibold text-gray-700 mb-1" %>
          <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: "w-full px-3 py-2 bg-gray-100 border border-gray-400 rounded-md" %>
        </div>

        <!-- Update -->
        <%= f.submit "UPDATE SAVE DATA",
          class: "w-full py-3 bg-blue-600 hover:bg-blue-700 text-white font-pixel rounded-md transition" %>

      <% end %>

      <!-- 危険ゾーン -->
      <div class="mt-10 pt-6 border-t border-gray-400 text-center">
        <h3 class="text-xs font-pixel text-red-700 mb-3">
          DELETE SAVE DATA
        </h3>

        <%= button_to "CANCEL ACCOUNT",
          registration_path(resource_name),
          method: :delete,
          data: {
            confirm: "セーブデータを削除します。よろしいですか？",
            turbo_confirm: "セーブデータを削除します。よろしいですか？"
          },
          class: "w-full py-2 bg-red-600 hover:bg-red-700 text-white font-pixel rounded-md" %>
      </div>

      <!-- Back -->
      <div class="mt-6 text-center text-xs">
        <%= link_to "戻る", root_path,
          class: "text-blue-700 hover:underline" %>
      </div>

    </div>
  </div>
</div>

