<div id="<%= dom_id user %>" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 border border-gray-200">
  <div class="mb-4">
    <h3 class="text-lg font-semibold text-gray-900">
      <%= user.name || "ユーザー" %>
    </h3>
    <p class="text-sm text-gray-500 mt-1">
      <%= user.email %>
    </p>
  </div>

  <div class="space-y-3 mb-6 text-sm">
    <div class="flex justify-between">
      <span class="text-gray-600 font-medium">生年月日:</span>
      <span class="text-gray-900"><%= user.birthday&.strftime('%Y年%m月%d日') || 'N/A' %></span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-600 font-medium">性別:</span>
      <span class="text-gray-900"><%= user.gender || 'N/A' %></span>
    </div>
  </div>

  <div class="flex gap-2 pt-4 border-t border-gray-200">
    <%= link_to "詳細", user, class: "flex-1 px-3 py-2 bg-blue-600 text-white text-center rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" %>
    <%= link_to "編集",edit_user_registration_path,class: "flex-1 px-3 py-2 bg-gray-100 text-gray-900 text-center rounded-md hover:bg-gray-200 transition-colors text-sm font-medium" %>
  </div>
</div>
